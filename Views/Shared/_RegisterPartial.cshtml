@model FollowPeers.Models.RegisterModel
@using WebMatrix.Data;


@using (Html.BeginForm("Register", "Account"))
{
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
           
    <div class="controls">

        <!--   <p>
            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName)
            @Html.ValidationMessageFor(m => m.UserName) 
         </p> -->
        <input type="hidden" name="UserName" id="UserName" value="0" />

        <p>
            @*@Html.LabelFor(m => m.FirstName,"First Name")*@
            @Html.TextBoxFor(m => m.FirstName, new { @placeholder = "First Name", @class = "input-xlarge" })
            @Html.ValidationMessageFor(m => m.FirstName)
        </p>

        <p>
            @*@Html.LabelFor(m => m.LastName,"Last Name")*@
            @Html.TextBoxFor(m => m.LastName, new { @placeholder = "Last Name", @class = "input-xlarge" })
            @Html.ValidationMessageFor(m => m.LastName)
        </p>


        <p>
            @* @Html.LabelFor(m => m.Email)*@
            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @class = "input-xlarge" })
            @*<input length="0" data-val="true" data-val-required="The Email address field is required." id="Email" name="Email" type="text" value="" placeholder="Email" class="input-xlarge">*@
            @Html.ValidationMessageFor(m => m.Email)

        </p>


        <p>
            @* @Html.LabelFor(m => m.Password)*@
            @Html.PasswordFor(m => m.Password, new { @placeholder = "Password *Min 6 & at least 1 non-alphanumeric character", @class = "input-xlarge" })
            @Html.ValidationMessageFor(m => m.Password)
        </p>


        <p>
            @* @Html.LabelFor(m => m.ConfirmPassword)*@
            @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm Password", @class = "input-xlarge" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </p>


        <p>
            @{List<string> profession = new List<string>();
              profession.Add("Free Account");
              profession.Add("Premium Account");
            }
            @Html.DropDownList("Profession", new SelectList(profession))
        </p>
        <input class="btn btn-primary" type="submit" value="Sign Up" style="font-family:'Segoe UI';font-weight:bold;width:130px;align-content:center;"/>
       

    </div>
    
            
    
