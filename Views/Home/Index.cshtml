

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Follow Peers</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="Content/css/bootstrap.css" rel="stylesheet">
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
   

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>

  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>

          </a>
            
          <a class="brand" href=".">Follow Peers</a>
          <div class="nav-collapse collapse">
                @Html.Partial("_LogOnPartial")
              
          </div><!--/.nav-collapse -->
            
        </div>
      </div>
    </div>

    <div class="container">

      <div class="row" style="margin-top:20px;">
      	<div class="span8">
      		<div id="myCarousel" class="carousel slide">
			  <!-- Carousel items -->
			  <div class="carousel-inner">
			    <div class="active item"><img src="Content/images/s1.png"/></div>
                 <div class="item"><img src="Content/images/s2.png"/></div>

			   
			  </div>
			  <!-- Carousel nav -->
			  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
			  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
			</div>
      	</div>
      	<div class="span4">
      		<h2>New User?</h2>
            <h5>Sign Up Now! It's Quick and Easy!</h5>
                @Html.Partial("_RegisterPartial")
		</div>

      <!-- Example row of columns -->
      <div class="row">
        <div class="span6">
          <h2>Free Account</h2>
          <p>Connect with students, professors, researchers, job seekers, employers, investors and other peers to connect, collaborate and create limitless opportunities!</p>
          
        </div>
        <div class="span6">
          <h2>Premium Account</h2>
          <p>Coming soon- Premium accounts allow you to achieve your maximum potential with additional features to enhance sharing, networking and productivity!</p>
   
       </div>
  
      </div>

       @Html.Partial("_Footer")

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="Scripts/jquery.js"></script>
    <script src="Scripts/bootstrap.js"></script>
   	<script type="text/javascript">
   	    $('.carousel').carousel({
   	        interval: 2000
   	    });
   	    $('#myModal').modal()
        $('#myModal').modal('hide')
    </script>

  </body>
</html>
