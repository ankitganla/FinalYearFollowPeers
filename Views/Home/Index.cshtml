

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>FollowMyPeer</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Reseach SNS">
    <meta name="author" content="Lucas&Ankit">

    <!-- Le styles -->
    <link rel="shortcut icon" href="Content/images/logo.ico" type="image/x-icon" />
    <link href="Content/css/bootstrap.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Germania+One' rel='stylesheet' type='text/css'>

    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>

  </head>

  <body>

    <div class="container" style="height:100%;">
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>

          </a>
            
          <a class="brand" href="." style="font-family:'Germania One';font-size:x-large">FollowMyPeer</a>
          <div class="nav-collapse collapse">
                @Html.Partial("_LogOnPartial")
              
          </div><!--/.nav-collapse -->
            
        </div>
      </div>
    </div>

    <div class="row" style="margin-top:20px;">
      	<div class="span8" style="margin-top:20px;">
      		<div id="myCarousel" class="carousel slide">
			  <!-- Carousel items -->
			  <div class="carousel-inner">
			    <div class="active item"><img src="Content/images/s1.jpg"/></div>
                 <div class="item"><img src="Content/images/s6.jpg"/></div>

			   
			  </div>
			  <!-- Carousel nav -->
			  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
			  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
			</div>
      	</div>
      	<div class="span4">
      		<h2 style="font-family:Arial;">New User?</h2>
            <h6 style="font-family:Arial;">Sign Up Now! It's Always Quick and Easy!</h6>
                @Html.Partial("_RegisterPartial")
		</div>

     
        <div class="span6">
          <h4 style="font-family:'Segoe UI';">Free Account</h4>
          <p>Connect with your peers worldwide for academic communication, research collaboration and technology innovation.</p>
          
        </div>
        <div class="span6">
          <h4 style="font-family:'Segoe UI';">Premium Account</h4>
          <p>Premium accounts allow you to achieve your maximum potential with additional features to enhance sharing, networking and productivity!</p>
        </div>
    </div>
    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="Scripts/jquery.js"></script>
    <script src="Scripts/bootstrap.js"></script>
   	<script type="text/javascript">
   	    $('.carousel').carousel({
   	        interval: 3000
   	    });
   	    $('#myModal').modal()
        $('#myModal').modal('hide')
    </script>

  </body>
    
        @Html.Partial("_Footer")
</html>
