@model IEnumerable<FollowPeers.Models.Comment>
@{
    ViewBag.Title = "Index";
    ViewBag.UserFullName = ViewBag.UserProfile.FirstName + " " + ViewBag.UserProfile.LastName;
}


<table style="margin: 5px 0px 5px 0px; width: 100%;">
    @{
        foreach (var item in Model)
        {
        <tr>
            <td>
                <div class="MessageContainer" style="border-color: Black; border: inherit">
                    <img src="@ViewBag.UserProfile.PhotoUrl" style="width:48px; height:48px; padding:5px 2px 5px 2px; display:inline-block; float:left;"/>
                    <div class="messageDetails" style="width: 73%; height: 40px; float: left; padding: 5px 0px 0px 10px;">
                        <div class="messageName"><strong>@ViewBag.UserFullName</strong></div>
                        <div class="messageSubject" style="width: 100%;">@Html.Label(item.CommentBody)</div>
                    </div>
                    @if (item.Flagged == true)
                    {
                        <div class="MessageOptions" style="width: 15%; float: right; display: inline-block;">

                            <a href="@Url.Action("Flag", new { id = item.CommentId, PublicationId = item.ParentId })">
                                <img style="vertical-align: middle; height: 17px" src="../../Content/images/icons/16x16/flag_green.PNG" />
                            </a>
                        </div>   
                    }
                    else
                    {
                        <div class="MessageOptions" style="width: 15%; float: right; display: inline-block;">
                            <a href="@Url.Action("Flag", new { id = item.CommentId, PublicationId = item.ParentId })">
                                <img style="vertical-align: middle; height: 17px" src="../../Content/images/icons/16x16/flag_blue.PNG" />
                            </a>
                        </div>
                    }

                </div>
            </td>
        </tr>
                
        }
        
        
    }
</table>
