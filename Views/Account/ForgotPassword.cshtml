@model FollowPeers.Models.LogOnModel

@{
    ViewBag.Title = "ForgotPassword";
}

<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
        </div>
      </div>
    </div>
@*@Html.Partial("_Header")*@
<div style="margin-left: 4cm">
<div class="grid_16">
    <h2 id="page-heading">Forgot Password?</h2>
</div>
<div class="clear"></div>
<div class="grid_10 prefix_3">

<div class="box">
@Html.ValidationSummary(true, "No worries, we'll send it to you")
<p>
    Please fill in your email address below
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName,new { @placeholder="Email address", @class="input-xlarge" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="controls">
                <input class="btn btn-primary" type="submit" value="Retrieve Password"/>
            </div>
        </fieldset>
    </div>
}
</div>
</div>
</div>
<div class="clear"></div>
@Html.Partial("_Footer")